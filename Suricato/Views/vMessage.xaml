<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Suricato.Views.vMessage">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource main_container}" x:Name="MainStackLayout" >
           <StackLayout Style="{StaticResource content_container}">


                <StackLayout HorizontalOptions="CenterAndExpand" >
                    <Image Source="suricato_avatar.png" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="160" Margin="0,30,0,0"/>
                </StackLayout>

                <Label Style="{StaticResource header_title}" HorizontalTextAlignment="Center" Margin="0,20,0,0"  x:Name="lblContent"/>

                <Button Style="{StaticResource default_button}" Text="INICIAR" x:Name="btIniciar" />

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>